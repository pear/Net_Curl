<?xml version="1.0" encoding="ISO-8859-1" ?>
<package>
    <name>Net_Curl</name>
    <summary>Net_Curl provides an OO interface to PHP's cURL extension</summary>
    <description>Provides an OO interface to PHP's curl extension</description>
    <license>PHP</license>
    <maintainers>
        <maintainer>
            <user>jstump</user>
            <name>Joe Stump</name>
            <email>pear@joestump.net</email>
            <role>lead</role>
        </maintainer>
        <maintainer>
            <user>jausions</user>
            <name>Philippe Jausions</name>
            <email>Philippe.Jausions@11abacus.com</email>
            <role>lead</role>
        </maintainer>
    </maintainers>
    <release>
        <version>1.2.3</version>
        <date>2006-06-16</date>
        <notes>
            - Fixed bug #7918
        </notes>
        <state>stable</state>
        <filelist>
            <dir name="Net">
                <file role="php">Curl.php</file>
            </dir>
            <dir name="examples" baseinstalldir="docs/Net_Curl">
                <file role="doc">fetchPage.php</file>
            </dir>
        </filelist>
        <deps>
            <dep type="php" rel="ge" version="4.2.0" />
            <dep type="ext" rel="has">curl</dep>
        </deps>
    </release>
